{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/JakkuSakura/ONI-AI/schemas/bridge-response.schema.json",
  "title": "ONI AI Bridge Response",
  "description": "Normalized response returned by bridge to ONI mod.",
  "type": "object",
  "additionalProperties": true,
  "required": ["actions"],
  "properties": {
    "analysis": {
      "type": "string"
    },
    "suggestions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/action"
      }
    },
    "notes": {
      "type": "string"
    }
  },
  "$defs": {
    "action": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "set_speed",
            "no_op",
            "build",
            "dig",
            "deconstruct",
            "priority",
            "arrangement",
            "research",
            "pause",
            "resume",
          "cancel",
          "set_duplicant_status",
          "set_duplicant_priority",
          "set_duplicant_skills"
          ]
        },
        "params": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "speed": {
              "type": "integer",
              "minimum": 1,
              "maximum": 3
            },
            "target_action_id": {
              "type": "string",
              "minLength": 1
            },
            "target_action_type": {
              "type": "string",
              "enum": [
                "set_speed",
                "no_op",
                "build",
                "dig",
                "deconstruct",
                "priority",
                "arrangement",
                "research",
                "pause",
                "resume",
                "cancel",
                "set_duplicant_status",
                "set_duplicant_priority",
                "set_duplicant_skills"
              ]
            },
            "duplicant_id": {
              "type": "string",
              "minLength": 1
            },
            "duplicant_name": {
              "type": "string",
              "minLength": 1
            },
            "active": {
              "type": "boolean"
            },
            "priorities": {
              "type": "object",
              "additionalProperties": {
                "type": "integer"
              }
            },
            "skills": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": { "const": "set_speed" }
            }
          },
          "then": {
            "required": ["params"],
            "properties": {
              "params": {
                "required": ["speed"]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "cancel" }
            }
          },
          "then": {
            "required": ["params"],
            "properties": {
              "params": {
                "anyOf": [
                  {
                    "required": ["target_action_id"]
                  },
                  {
                    "required": ["target_action_type"]
                  }
                ]
              }
            }
          }
        }
      ]
    }
  }
}
