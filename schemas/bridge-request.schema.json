{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/JakkuSakura/ONI-AI/schemas/bridge-request.schema.json",
  "title": "ONI AI Bridge Request",
  "description": "Payload posted by ONI mod to bridge /analyze endpoint.",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "request_id",
    "request_dir",
    "snapshot_dir",
    "screenshot_path",
    "requested_at_utc",
    "context",
    "duplicants",
    "available_actions"
  ],
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique request identifier generated by mod."
    },
    "request_dir": {
      "type": "string",
      "minLength": 1,
      "description": "Request working directory path; prefer relative in request.json (e.g. .)."
    },
    "snapshot_dir": {
      "type": "string",
      "minLength": 1,
      "description": "Path to snapshot directory; prefer relative to request_dir."
    },
    "screenshot_path": {
      "type": "string",
      "minLength": 1,
      "description": "Path to screenshot file; prefer relative to request_dir."
    },
    "requested_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "context": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "cycle",
        "time_since_cycle_start",
        "time_in_cycles",
        "paused",
        "current_speed",
        "previous_speed",
        "real_time_since_startup_seconds",
        "unscaled_time_seconds"
      ],
      "properties": {
        "cycle": { "type": "integer" },
        "time_since_cycle_start": { "type": "number" },
        "time_in_cycles": { "type": "number" },
        "paused": { "type": "boolean" },
        "current_speed": { "type": "integer", "minimum": 1, "maximum": 3 },
        "previous_speed": { "type": "integer", "minimum": 1, "maximum": 3 },
        "real_time_since_startup_seconds": { "type": "number" },
        "unscaled_time_seconds": { "type": "number" }
      }
    },
    "available_actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "set_speed",
          "no_op",
          "build",
          "dig",
          "deconstruct",
          "priority",
          "arrangement",
          "research",
          "pause",
          "resume",
          "cancel",
          "set_duplicant_status",
          "set_duplicant_priority",
          "set_duplicant_skills"
        ]
      }
    },
    "duplicants": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["id", "name", "status", "priority", "skills"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "status": { "type": "object", "additionalProperties": true },
          "priority": { "type": "object", "additionalProperties": true },
          "skills": {
            "type": "array",
            "items": { "type": ["string", "object", "number", "boolean"] }
          }
        }
      }
    }
  }
}
