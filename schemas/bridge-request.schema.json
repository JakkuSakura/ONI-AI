{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/JakkuSakura/ONI-AI/schemas/bridge-request.schema.json",
  "title": "ONI AI Bridge Request",
  "description": "Payload posted by ONI mod to bridge /analyze endpoint.",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "request_id",
    "request_dir",
    "snapshot_dir",
    "screenshot_path",
    "requested_at_utc",
    "context"
  ],
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique request identifier generated by mod."
    },
    "request_dir": {
      "type": "string",
      "minLength": 1,
      "description": "Absolute path containing request.json, snapshot/, logs/."
    },
    "snapshot_dir": {
      "type": "string",
      "minLength": 1,
      "description": "Absolute path to snapshot directory."
    },
    "screenshot_path": {
      "type": "string",
      "minLength": 1,
      "description": "Absolute path to screenshot file produced by game."
    },
    "requested_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "context": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "cycle",
        "time_since_cycle_start",
        "time_in_cycles",
        "paused",
        "current_speed",
        "previous_speed",
        "real_time_since_startup_seconds",
        "unscaled_time_seconds"
      ],
      "properties": {
        "cycle": { "type": "integer" },
        "time_since_cycle_start": { "type": "number" },
        "time_in_cycles": { "type": "number" },
        "paused": { "type": "boolean" },
        "current_speed": { "type": "integer", "minimum": 1, "maximum": 3 },
        "previous_speed": { "type": "integer", "minimum": 1, "maximum": 3 },
        "real_time_since_startup_seconds": { "type": "number" },
        "unscaled_time_seconds": { "type": "number" }
      }
    }
  }
}
