{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/JakkuSakura/ONI-AI/schemas/bridge-request.schema.json",
  "title": "ONI AI Bridge Request",
  "description": "Payload posted by ONI mod to bridge /analyze endpoint.",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "request_id",
    "request_dir",
    "api_base_url",
    "screenshot_path",
    "requested_at_utc",
    "context",
    "duplicants",
    "pending_actions",
    "priorities"
  ],
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique request identifier generated by mod."
    },
    "request_dir": {
      "type": "string",
      "minLength": 1,
      "description": "Request working directory path used as Codex execution cwd."
    },
    "api_base_url": {
      "type": "string",
      "minLength": 1,
      "description": "Base URL for ONI-side HTTP API, for example http://127.0.0.1:8766."
    },
    "state_endpoint": {
      "type": "string",
      "minLength": 1,
      "description": "Optional explicit state endpoint URL."
    },
    "actions_endpoint": {
      "type": "string",
      "minLength": 1,
      "description": "Optional explicit actions endpoint URL."
    },
    "health_endpoint": {
      "type": "string",
      "minLength": 1,
      "description": "Optional explicit health endpoint URL."
    },
    "screenshot_path": {
      "type": "string",
      "minLength": 1,
      "description": "Path to screenshot file; prefer relative to request_dir."
    },
    "requested_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "context": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "cycle",
        "time_since_cycle_start",
        "time_in_cycles",
        "paused",
        "current_speed",
        "previous_speed",
        "real_time_since_startup_seconds",
        "unscaled_time_seconds"
      ],
      "properties": {
        "cycle": { "type": "integer" },
        "time_since_cycle_start": { "type": "number" },
        "time_in_cycles": { "type": "number" },
        "paused": { "type": "boolean" },
        "current_speed": { "type": "integer", "minimum": 1, "maximum": 3 },
        "previous_speed": { "type": "integer", "minimum": 1, "maximum": 3 },
        "real_time_since_startup_seconds": { "type": "number" },
        "unscaled_time_seconds": { "type": "number" }
      }
    },
    "duplicants": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["id", "name", "status", "priority", "skills"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "status": { "type": "object", "additionalProperties": true },
          "priority": { "type": "object", "additionalProperties": true },
          "skills": {
            "type": "array",
            "items": { "type": ["string", "object", "number", "boolean"] }
          }
        }
      }
    },
    "pending_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "priorities": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "runtime_config": {
      "type": "object",
      "additionalProperties": true
    },
    "assemblies": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "scenes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "singletons": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    }
  }
}
